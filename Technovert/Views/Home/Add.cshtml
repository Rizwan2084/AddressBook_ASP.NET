
@model ContactDetails
@{
	ViewData["Title"] = "About";
}

<h1> @ViewData["Message"]</h1>

<div id="overlay">
	<div class="popup-container">
		<form asp-action="Add" method="post">
			<div class="block">
				<label asp-for="Name">Name</label>
				<input type="text" id="name" asp-for="Name" placeholder="Your name..">
				<span id="nameRequired"></span>
			</div>
			<div class="block">
				<label asp-for="Email">Email</label>
				<input type="text" id="email" asp-for="Email" placeholder="Your email..">
				<span id="emailRequired"></span>
			</div>
			<div class="content">
				<div class="list-content">
					<label asp-for="Mobile">Mobile</label>
					<input type="number" id="mobile" asp-for="Mobile" placeholder="Your mobile..">
					<span id="mobileRequired"></span>
				</div>
				<div class="list-content">
					<label asp-for="Landline">Landline</label>
					<input type="number" id="landline" asp-for="Landline" placeholder="Your landline..">
				</div>
			</div>
			<div class="block">
				<label asp-for="Website">website</label>
				<input type="text" id="website" asp-for="Website" placeholder="Your website..">
			</div>
			<div class="block">
				<label asp-for="Address">Address</label>
				<textarea id="address" asp-for="Address"></textarea>
			</div>
			<input id="addContactButton" type="submit" value="Add">
			<!--<input id="cancel" type="button" value="Cancel"> -->
		</form>
	</div>
</div>
